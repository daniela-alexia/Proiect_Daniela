@page
@model Proiect_Daniela.Pages.Departamente.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Modificare Departament</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Departament.ID" />
            <div class="form-group">
                <label asp-for="Departament.Denumire" class="control-label"></label>
                <input asp-for="Departament.Denumire" class="form-control" />
                <span asp-validation-for="Departament.Denumire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departament.Descriere" class="control-label"></label>
                <input asp-for="Departament.Descriere" class="form-control" />
                <span asp-validation-for="Departament.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departament.NumarAngajati" class="control-label"></label>
                <input asp-for="Departament.NumarAngajati" class="form-control" />
                <span asp-validation-for="Departament.NumarAngajati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
