@page
@model Proiect_Daniela.Pages.Departamente.IndexModel

@{
    ViewData["Title"] = "Departamente";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Departamente Companie</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departament[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departament[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departament[0].NumarAngajati)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departament) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarAngajati)
            </td>
            <td>
                    <a asp-page="./Edit" class="btn btn-dark" asp-route-id="@item.ID">Editeaza</a> |
                <a asp-page="./Details"  class="btn btn-dark" asp-route-id="@item.ID">Detalii</a> |
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.ID">Sterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
