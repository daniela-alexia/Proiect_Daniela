@page
@model Proiect_Daniela.Pages.Departamente.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Departament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
