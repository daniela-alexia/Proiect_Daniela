                <label asp-for="Departament.NumarAngajati" class="control-label"></label>
                <input asp-for="Departament.NumarAngajati" class="form-control" />
                <span asp-validation-for="Departament.NumarAngajati" style="margin-bottom:10px" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" style="margin-bottom:10px" value="Create" class="btn btn-primary" />
            </div>
