@page
@model Proiect_Daniela.Pages.Angajati.ListModel
@{
}



<h1 class="mb-3"> Lista Angajatilor </h1>

@if(Model.Angajati != null && Model.Angajati.Any())
{
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nume</th>
				<th>Email</th>
				<th> </th>
			</tr>
		</thead>
		<tbody>
			@foreach(var employee in Model.Angajati){
				<tr>
					<td>@employee.Id</td>
					<td>@employee.Name</td>
					<td>@employee.Email</td>
					<td>
						<a href="/Angajati/Edit/@employee.Id" class="btn btn-dark">Editeaza</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

else {
	<p>Niciun angajat gasit</p>
}